<%- include("header"); -%>

<div class="box" id="heading">
  <h1><%= listTitle %></h1>
</div>
<div class="box">
  <% items.forEach(function(item) { %>
  <form
    action="/categories/<%= encodeURIComponent(listTitle) %>/delete"
    method="post"
  >
    <div class="item">
      <input
        type="checkbox"
        name="itemCheckbox"
        onchange="this.form.submit()"
        value="<%=item._id.toString()%>"
      />
      <input type="hidden" name="categoryName" value="<%=listTitle%>"
      <p><%= item.name %></p>
    </div>
  </form>
  <% }) %>
  <form
    class="item"
    action="/categories/<%= encodeURIComponent(listTitle) %>"
    method="post"
  >
    <input
      type="text"
      name="newItem"
      placeholder="New item"
      autocomplete="off"
    />
    <input type="hidden" name="listTitle" value="<%= listTitle %>" />
    <button type="submit" name="button">+</button>
  </form>
</div>
<a href="/" id="backHomeBtn">Back Home</a>

<%- include("footer"); -%>
